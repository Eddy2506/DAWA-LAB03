<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Clientes</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container" style="margin-top:70px ;">
        <div class="row mt-5">
            <h3 class="text-center text-uppercase p-2">Listado de Clientes</h3>

            <div style="padding: 10px;">
                <button class="btn btn-dark"><a class="nav-link link-light" aria-current="page" href="/add"> Nuevo Cliente</a></button>
            </div>

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Nro. DNI</th>
                        <th scope="col">Nro. Teléfono</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Ricardo</td>
                        <td>Coello Palomino</td>
                        <td>42174379</td>
                        <td>933588638</td>
                        <td>
                            <div class="">
                                <a href="/edit" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i>Actualizar</a>

                                <a href="#" class="btn btn-danger p-2" class="deleteBtn">
                                    <i class="fa-solid fa-trash"></i>Eliminar</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="5">REGISTRO DE CLIENTES</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <script>
        document.querySelectorAll('.btn-danger').forEach(button => {
            button.addEventListener('click', function(event) {
                event.preventDefault(); // Previene el comportamiento por defecto del enlace

                Swal.fire({
                    title: '¿Está seguro que desea eliminar esta Categoria?',
                    text: "¡Esta acción no se puede deshacer!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Aquí puedes poner la lógica para eliminar el producto
                        Swal.fire(
                            'Eliminado',
                            'Cliente ha sido eliminado.',
                            'success'
                        ).then(() => {
                            // Redirigir a la página de listado después de eliminar
                            window.location.href = '/list';
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
